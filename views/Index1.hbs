                        <button id="search_profile"> Search </button>
                    </div>
                    <a href="#">
                        <p class="modal_back" id="modal_back"><i> Back </i></p>
                    </a>  
                </div>
            </div>

            <div id="modal2" class="modal">
                <div class="modal-content">
                    <p style="color:white">Would you like to extend your session?</p>
                        <div>
                            <button id="yes">Yes</button>
                            <button id="no">No</button>
                        </div>
                </div>
            </div>
            
            <div id="left_div">
                <div id="div_1">
                    <a href="/StudentInfo1">
                        <button class="div_button">
                            Profile
                        </button>
                    </a>
                    <a href="/logoutAccount">
                        <button class="div_button">
                            Log Out
                        </button>
                    </a>
                </div>

                <div id="div_2">
                    <a href="/Laboratory1">
                        <button id="lab_1">
                            Laboratory 1
                        </button>
                    </a>
                </div>

                <div id="div_3">
                    <a href="#">
                        <button id="search_user">
                            Search User
                        </button>
                    </a>
                </div>
            </div>

            <div id="right_div">
                <div id="top_div">
                </div>
                <div id="content_div">
                </div>
            </div>
        </div>
